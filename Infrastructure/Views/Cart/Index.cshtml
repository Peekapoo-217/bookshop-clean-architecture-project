@model IEnumerable<Entities.CartItem>

<h2>Danh sách giỏ hàng</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>BookId</th>
            <th>Quantity</th>
            <th>UserId</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.BookId</td>
                <td>@item.Quantity</td>
                <td>@item.UserId</td>
                <td>
                    <a href="@Url.Action("Update", new { id = item.Id })">Sửa</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Add")" class="btn btn-primary">Thêm mới</a>
