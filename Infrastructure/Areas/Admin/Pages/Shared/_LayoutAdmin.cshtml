@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- FontAwesome CDN for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="~/css/LayoutAdmin.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <i class="fas fa-tachometer-alt"></i> <!-- Icon cho Dashboard -->
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Publishers/Index">
                                <i class="fas fa-users"></i> <!-- Icon cho Manage Publishers -->
                                Nhà xuất bản
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Categories/Index">
                                <i class="fas fa-tags"></i> <!-- Icon cho Manage Categories -->
                                Danh mục
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-page="/Books/Index">
                                <i class="fas fa-book"></i> <!-- Icon cho Manage Books -->
                                Sách
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="Admin" asp-page="/Orders/Index">
                                <i class="fa fa-calendar"></i>
                                Đơn đặt hàng
                            </a>
                        </li>
                        <l1>
                            <a asp-action="Logout" asp-controller="Authentication" asp-area="" class="nav-link" id="logoutButton">
                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                            </a>
                        </l1>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="main-content" style="width: calc(100% - 250px);">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>
        feather.replace();
    </script>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>
