@page
@model Infrastructure.Areas.Admin.Pages.Publishers.EditModel

@{
    ViewData["Title"] = "Edit Publisher";
}

<h2>Cập nhật nhà xuất bản</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Publisher.Name" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu thay đổi</button>
</form>
